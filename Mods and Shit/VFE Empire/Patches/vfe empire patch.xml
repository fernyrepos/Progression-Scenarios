<?xml version="1.0" encoding="utf-8" ?>
<Patch>    
<!-- Now it's ultratech -->
                <Operation Class="PatchOperationReplace">
                    <xpath>Defs/FactionDef[defName="VFEE_NewFamily"]/techLevel</xpath>
                    <value>
                        <techLevel>Ultra</techLevel>
                    </value>
                </Operation>
                <Operation Class="PatchOperationReplace">
                    <xpath>Defs/FactionDef[defName="VFEE_NewFamily"]/startingResearchTags</xpath>
                    <value>
                        <startingResearchTags>
                            <li>ClassicStart</li>
                            <li>FernySpacerStart</li>
                        </startingResearchTags>
                    </value>
                </Operation>

<!-- Flavor -->
                <Operation Class="PatchOperationReplace">
                    <xpath>Defs/ScenarioDef[defName="VFEE_NewFamily"]/label</xpath>
                    <value>
                        <label>Ambushed Manor</label>
                    </value>
                </Operation>
                <Operation Class="PatchOperationReplace">
                    <xpath>Defs/ScenarioDef[defName="VFEE_NewFamily"]/scenario/summary</xpath>
                    <value>
                        <summary>An imperial family in dire need of help. A very challenging Empire start.</summary>
                    </value>
                </Operation>
</Patch>